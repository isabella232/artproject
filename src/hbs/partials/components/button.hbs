<{{#if href}}a href={{href}} rel="noopener" target="_blank"{{else}}button{{/if}}
  class="button {{ class }}"
  style="
    {{#if outlineColor }}
      color: {{ outlineColor }};
    {{/if}}
    {{#if backgroundColor }}
      background-color: {{ backgroundColor }};
    {{/if}}
  "
>
  {{#if icon}}
    <div class="button__icon">
      {{icon}}
    </div>
  {{/if}}
  {{label}}
</{{#if href}}a{{else}}button{{/if}}>
